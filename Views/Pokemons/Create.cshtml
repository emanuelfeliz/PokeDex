@model PokeDex.Models.Pokemons
@{
    ViewData["Title"] = "Create";
}

<div class="text-center">
    <h1>Create a Pokemon</h1>
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center text-bg-dark">Add Pokemon</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label">Name</label>
                            <input type="text" asp-for="Name" class="form-control" placeholder="Pokemon name" id="pokemonName">
                        </div>
                        <div class="mb-3">
                            <label asp-for="Picture" class="form-label">Upload a picture</label>
                            <input class="form-control" asp-for="Picture" type="file" id="formFile">
                        </div>
                        <select class="form-select col-md-6" asp-for="Region" aria-label="Default select example">
                            <option selected>Choose the region</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select> <br>
                        <select class="form-select col-md-6" asp-for="Primary" aria-label="Default select example">
                            <option selected>Primary pokemon</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select><br>
                        <select class="form-select col-md-6" asp-for="Secondary" aria-label="Default select example">
                            <option selected>Secondary pokemon</option>
                            <option value="1">One</option>
                            <option value="2">Two</option>
                            <option value="3">Three</option>
                        </select>
                        <br> <br>
                        <button type="submit" class="btn btn-danger">Save changes</button>
                    </form>
                </div>
            </div>
        </div>
     </div>
</div>

